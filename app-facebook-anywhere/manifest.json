{
   "background": {
      "page": "background.html"
   }, 
   "icons": {
      "16": "img/comments16px.png"
   },
   "browser_action": {
      "default_icon": "img/comments16px.png",
      "default_popup": "popup.html"
   },
   "content_scripts": [
     {
       "matches": ["http://*/*","https://*/*"],
       "run_at": "document_start",
       "all_frames": true
     }
   ]
   "description": "Facebook Comment Anywhere",
   "manifest_version": 2,
   "name": "Facebook Comment Anywhere",
   "permissions": [ "notifications", "tabs", "http://*/*", "https://*/*" ],
   "version": "0.0.1"
}
